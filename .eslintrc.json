{
  "extends": "eslint:recommended",
  "env": {
     "es6": true,
     "browser": true,
     "jest": true
  },
  "overrides": [
    {
      "files": ["**/*/*.test.js"],
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "rules": { "jest/prefer-expect-assertions": "off"}
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ]
  }
  
}